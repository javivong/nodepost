{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger API for Players DB",
    "description": "REST Api documentation for the Node.js server",
    "version": "1.0.1"
  },
  "servers": [
    {
      "url": "{protocol}://limitless-oasis-95018.herokuapp.com/{basePath}",
      "description": "Testing heroku server",
      "variables": {
        "protocol": {
          "enum": [
            "https"
          ],
          "default": "https"
        },
        "port": {
          "enum": [
            "",
            "3000"
          ],
          "default": ""
        },
        "basePath": {
          "enum": [
            "api/"
          ],
          "default": "api/"
        }
      }
    }
  ],
  "paths": {
    "/": {
      "get": {
        "description": "Root page, show if the server is up",
        "parameters": [],
        "responses": {
          "100": {
            "description": "2-DAMVI Server is Up",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          }
        }
      }
    },
    "/ranking": {
      "get": {
        "parameters": [],
        "responses": {
          "default": {
            "$ref": "#/components/responses/ranking"
          }
        }
      }
    },
    "/players/{alias}": {
      "parameters": [
        {
          "$ref": "#/components/parameters/alias"
        }
      ],
      "get": {
        "description": "Get the player by the alias",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Player exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codePlayer"
                }
              }
            }
          },
          "504": {
            "description": "Error: Player not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          }
        }
      },
      "post": {
        "description":"Create a player",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestbody"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Player correctly created",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/codeStatus"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "player": {
                          "type": "object",
                          "$ref": "#/components/schemas/player"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "502": {
            "description": "The field: name, surname, score are mandatories (the score value has to be >0)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          },
          "503": {
            "description": "Error: Player exist",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          }
        }
      },
      "put": {
        "description":"",
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/requestbody"
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Player correctly updated",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/codeStatus"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "player": {
                          "type": "object",
                          "$ref": "#/components/schemas/playerUpdated"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "502": {
            "description": "The field: name, surname, score are mandatories (the score value has to be >0)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          },
          "504": {
            "description": "Player not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/codeStatus"
                }
              }
            }
          }
        }
      }

        }
  },
  "components": {
    "parameters": {
      "alias": {
        "name":"alias",
        "in": "path",
        "required": true,
        "description": "Alias of the player that we want to acces",
        "schema": {
          "type": "string"
        }
      }
    },
    "schemas": {
      "codeStatus": {
        "type":"object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "error": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "codePlayer": {
        "allOf": [
          {
            "$ref": "#/components/schemas/codeStatus"
          },
          {
            "type": "object",
            "properties": {
              "player": {
                "type": "object",
                "oneOf": [
                  {
                    "$ref": "#/components/schemas/player"
                  },
                  {
                    "$ref": "#/components/schemas/playerUpdated"
                  }
                ]
              }
            }
          }
        ]
      },
      "player": {
        "type": "object",
        "properties": {
          "position": {
            "type": "string"
          },
          "alias": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "score": {
            "type": "integer",
            "format": "int32"
          },
          "created": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "playerUpdated": {
        "allOf": [
          {
            "$ref": "#/components/schemas/player"
          },
          {
            "type": "object",
            "properties": {
              "updated": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },
      "requestbody": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "surname": {
            "type": "string"
          },
          "score": {
            "type": "integer",
            "format": "int32"
          }
        },
        "required": [
          "name",
          "surname",
          "score"
        ]
      }
    },
    "responses": {
      "ranking": {
        "description": "Get the number of players and ranking order by score",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "numberplayers": {
                  "type": "integer",
                  "format": "int32"
                },
                "players": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      {
                        "$ref": "#/components/schemas/player"
                      },
                      {
                        "$ref": "#/components/schemas/playerUpdated"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
      }
  }
}
